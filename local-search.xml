><span class="line">    <span class="keyword">if</span> (index &lt; <span class="number">0</span>) &#123;</span><br><span class="line">        index = <span class="number">2</span></span><br><span class="line">        center.style.left = <span class="number">-2100</span> + <span class="string">'px'</span>;</span><br><span class="line">    &#125;;</span><br><span class="line">    <span class="comment">// center.style.left = - index * width + 'px';</span></span><br><span class="line"></span><br><span class="line">    lis[index].className = <span class="string">'active'</span>;</span><br><span class="line">&#125;;</span><br><span class="line"><span class="comment">//小点跟随</span></span><br><span class="line"><span class="keyword">for</span> (<span class="keyword">var</span> i = <span class="number">0</span>; i &lt; lis.length; i++) &#123;</span><br><span class="line">    lis[i].xiabiao = i;</span><br><span class="line">    lis[i].onclick = <span class="function"><span class="keyword">function</span> (<span class="params"></span>) </span>&#123;</span><br><span class="line">        lis[index].className = <span class="string">''</span>;</span><br><span class="line">        index = <span class="keyword">this</span>[<span class="string">'xiabiao'</span>];</span><br><span class="line">        <span class="comment">// center.style.left = -index * width + 'px';</span></span><br><span class="line">        distance = - index * width</span><br><span class="line">        moveElement(center,distance,<span class="number">10</span>)</span><br><span class="line">        lis[index].className = <span class="string">'active'</span>;</span><br><span class="line">    &#125;</span><br><span class="line">&#125;</span><br><span class="line"><span class="comment">//自动轮播</span></span><br><span class="line"><span class="keyword">var</span> auto = <span class="built_in">window</span>.setInterval(<span class="function"><span class="keyword">function</span>(<span class="params"></span>)</span>&#123;</span><br><span class="line">    burRight.onclick();</span><br><span class="line">&#125;,<span class="number">2000</span>);</span><br><span class="line">banenrCenter.onmouseover = <span class="function"><span class="keyword">function</span>(<span class="params"></span>)</span>&#123;</span><br><span class="line">    <span class="built_in">window</span>.clearInterval(auto);</span><br><span class="line">&#125;;</span><br><span class="line">banenrCenter.onmouseout = <span class="function"><span class="keyword">function</span>(<span class="params"></span>)</span>&#123;</span><br><span class="line">    auto = <span class="built_in">window</span>.setInterval(<span class="function"><span class="keyword">function</span>(<span class="params"></span>)</span>&#123;</span><br><span class="line">        burRight.onclick();</span><br><span class="line">    &#125;,<span class="number">2000</span>);</span><br><span class="line">&#125;</span><br></pre></td></tr></table></figure>]]></content>
    
    
    
